# CoAP Cloud Server Configuration
# Copy this file to .env and fill in your actual values

# ====================
# ThingsBoard Settings
# ====================
TB_URL=https://platform.tamtamdeals.com
TB_USERNAME=your@email.com
TB_PASSWORD=your_password

# ====================
# Server Configuration
# ====================
COAP_PORT=5683
WEB_PORT=5001

# ====================
# Network Configuration (Cloud Deployment)
# ====================

# WireGuard VPN Configuration
# Your home/border router public IP or dynamic DNS
WG_ENDPOINT=your.home.ip.address:51820
# Border Router's WireGuard public key
WG_BORDER_ROUTER_PUBLIC_KEY=your_border_router_public_key_here
# Server's WireGuard private key (generate with: wg genkey)
WG_SERVER_PRIVATE_KEY=your_server_private_key_here

# IPv6 Configuration
# Your Thread network prefix (from Border Router)
THREAD_PREFIX=fd78:8e78:3bfe:1::/64

# VPN tunnel IPv6 addresses
VPN_SERVER_IPV6=fd00:db8:1::1/64
VPN_BORDER_ROUTER_IPV6=fd00:db8:1::2/64

# ====================
# Border Router WebSocket Mode
# ====================
# Enable WebSocket mode for Border Routers (recommended for cloud deployment)
USE_WEBSOCKET_BR=false

# Enable authentication for Border Router connections
BR_AUTH_ENABLED=true

# Heartbeat timeout in seconds (BR will be considered offline after this delay)
BR_HEARTBEAT_TIMEOUT=30

# ====================
# Optional Settings
# ====================

# Dynamic DNS (if using instead of static IP)
DDNS_HOSTNAME=your-home.dyndns.org

# Hurricane Electric Tunnel (alternative to WireGuard)
# HE_TUNNEL_ID=your_tunnel_id
# HE_TUNNEL_ENDPOINT=tunnel_server_ipv4
# HE_CLIENT_IPV6=your_client_ipv6/64

# ====================
# Debug/Development
# ====================
DEBUG=False
LOG_LEVEL=INFO
# Flask secret key (generate a random one for production)
SECRET_KEY=your-secret-key-for-demo